<input type="text"id = "content" name = "ename"><input type="button" id="ajax_test" value="Basic Ajax"><hr>
<input type="button" id="ajax_test2" value="Basic Ajax2"><hr>
<input type="button" id="ajax_test3" value="Basic Ajax3"><hr>
<div id="restTest"><hr></div>
<script>
$(function() { 
	function makeTable(myval)
	{
		var list = JSON.parse(myval);
			console.log("성공:" + myval);   
			var htmlStr = "";
			$.map( list, function( MYval, MYidx ) {
				htmlStr += "<tr><td>title : " +MYval["title"] + "</td><td><br> contents : "+MYval["contents"] +"</td></tr><br>"
				//console.log(MYval["title"] + "," + MYval["regid"] + "," + MYidx);
		});
			htmlStr += "</table>";
			$("#restTest").empty();
			$("#restTest").html("<b>"+htmlStr+"</b>");
		
	}
$("#ajax_test").click(  function(){
	
		let content = $('#content').val();
		$.ajax({
			method      : "GET",
	        url         : "${pageContext.request.contextPath}/RestServletTest",
	        data 		: {content: content},
	  		error 	    : function(myval){ console.log("에러:" + myval);   },
	  		success     : function(myval){ 
	  										makeTable(myval);
	  									 }	
	  		});
	
	});
$("#ajax_test2").click(  function(){
	var objData = {"title":"aaaaatitle","regid":"hong"};
	let content = $('#content').val();
	$.ajax({
		method      : "POST",
        url         : "${pageContext.request.contextPath}/RestServletTest",
        data 		: JSON.stringify(objData),
  		error 	    : function(myval){ console.log("에러:" + myval);   },
  		success     : function(myval){ 
  										makeTable(myval);
  									 }	
  		});
	$("#ajax_test3").click(  function(){

		var ename_val = $("#ename").val();

		$.ajax({

			method      : "POST",

	        url         : "${pageContext.request.contextPath}/RestServletTest",

	        data 		: "ename="+ename_val,

	        //dataType	: "json",

	  		error 	    : function(myval){console.log("에러:" + myval);   },

	  		success     : function(myval){ makeTable(myval);	 }

	});

});
});
</script>
</body>
</html>